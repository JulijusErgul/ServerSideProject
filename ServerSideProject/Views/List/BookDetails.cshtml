@model ServiceLayer.Models.BookDetails
@{
    ViewBag.Title = "BookDetails";
}

<h2>BookDetails</h2>

<b>Name: @Model.BookTitle,</b><br/>
<p>ISBN: @Model.BookISBN, Pages: @Model.BookPages <i>Year: @Model.BookPublicationYear</i></p>
<p>@Model.BookInfo</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.AuthorsList != null)
        {
            foreach (var item in Model.AuthorsList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


